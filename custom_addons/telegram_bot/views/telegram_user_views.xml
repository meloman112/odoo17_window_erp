<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_telegram_user_tree" model="ir.ui.view">
        <field name="name">telegram.user.tree</field>
        <field name="model">telegram.user</field>
        <field name="arch" type="xml">
            <tree string="Telegram пользователи">
                <field name="display_name"/>
                <field name="partner_id"/>
                <field name="telegram_id"/>
                <field name="username"/>
                <field name="is_verified" widget="boolean_toggle"/>
                <field name="message_count"/>
                <field name="last_message_date"/>
            </tree>
        </field>
    </record>

    <record id="view_telegram_user_form" model="ir.ui.view">
        <field name="name">telegram.user.form</field>
        <field name="model">telegram.user</field>
        <field name="arch" type="xml">
            <form string="Telegram пользователь">
                <header>
                    <button name="action_verify" string="Верифицировать" type="object" 
                            class="oe_highlight" invisible="is_verified"/>
                    <button name="action_send_verification_code" string="Отправить код" type="object"
                            invisible="is_verified"/>
                    <button name="action_view_messages" string="Сообщения" type="object"
                            class="oe_stat_button" icon="fa-comments"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="telegram_id"/>
                            <field name="chat_id"/>
                            <field name="username"/>
                        </group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="is_verified" widget="boolean_toggle"/>
                            <field name="verified_date" readonly="1"/>
                            <field name="verification_code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Информация">
                            <group>
                                <field name="message_count" widget="statinfo" string="Сообщений"/>
                                <field name="last_message_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_telegram_user_search" model="ir.ui.view">
        <field name="name">telegram.user.search</field>
        <field name="model">telegram.user</field>
        <field name="arch" type="xml">
            <search string="Поиск Telegram пользователей">
                <field name="display_name"/>
                <field name="partner_id"/>
                <field name="telegram_id"/>
                <field name="username"/>
                <filter string="Верифицированные" name="verified" domain="[('is_verified', '=', True)]"/>
                <filter string="Не верифицированные" name="not_verified" domain="[('is_verified', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_telegram_user" model="ir.actions.act_window">
        <field name="name">Telegram пользователи</field>
        <field name="res_model">telegram.user</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_telegram_user_search"/>
    </record>
</odoo>

