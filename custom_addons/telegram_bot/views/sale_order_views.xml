<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_telegram" model="ir.ui.view">
        <field name="name">sale.order.form.telegram</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_id" invisible="1"/>
                <button name="action_view_telegram_users" string="Telegram клиента" type="object"
                        class="oe_stat_button" icon="fa-telegram"
                        context="{'default_partner_id': partner_id}"
                        invisible="not partner_id.has_telegram"/>
            </xpath>
        </field>
    </record>
</odoo>

