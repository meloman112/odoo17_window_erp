<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_telegram_message_tree" model="ir.ui.view">
        <field name="name">telegram.message.tree</field>
        <field name="model">telegram.message</field>
        <field name="arch" type="xml">
            <tree string="Сообщения Telegram">
                <field name="message_date"/>
                <field name="partner_id"/>
                <field name="direction" widget="badge" decoration-success="direction == 'outgoing'" decoration-info="direction == 'incoming'"/>
                <field name="text" widget="text"/>
                <field name="user_id"/>
                <field name="is_read" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_telegram_message_form" model="ir.ui.view">
        <field name="name">telegram.message.form</field>
        <field name="model">telegram.message</field>
        <field name="arch" type="xml">
            <form string="Сообщение Telegram">
                <header>
                    <button name="action_send_reply" string="Ответить" type="object"
                            class="oe_highlight" invisible="direction == 'outgoing'"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="telegram_user_id" readonly="1"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="message_date" readonly="1"/>
                            <field name="direction" widget="badge" readonly="1"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="is_read" widget="boolean_toggle"/>
                            <field name="reply_to_message_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="text" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_telegram_message_search" model="ir.ui.view">
        <field name="name">telegram.message.search</field>
        <field name="model">telegram.message</field>
        <field name="arch" type="xml">
            <search string="Поиск сообщений">
                <field name="partner_id"/>
                <field name="text"/>
                <filter string="Входящие" name="incoming" domain="[('direction', '=', 'incoming')]"/>
                <filter string="Исходящие" name="outgoing" domain="[('direction', '=', 'outgoing')]"/>
                <filter string="Непрочитанные" name="unread" domain="[('is_read', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_telegram_message" model="ir.actions.act_window">
        <field name="name">Сообщения Telegram</field>
        <field name="res_model">telegram.message</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_telegram_message_search"/>
        <field name="context">{'search_default_incoming': 1}</field>
    </record>

    <!-- Wizard для отправки сообщения -->
    <record id="view_telegram_message_wizard_form" model="ir.ui.view">
        <field name="name">telegram.message.wizard.form</field>
        <field name="model">telegram.message.wizard</field>
        <field name="arch" type="xml">
            <form string="Отправить сообщение">
                <sheet>
                    <group>
                        <field name="telegram_user_id" readonly="1"/>
                        <field name="reply_to_message_id" readonly="1"/>
                        <field name="text" placeholder="Введите текст сообщения..." nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Отправить" name="action_send" type="object" class="oe_highlight"/>
                    <button string="Отмена" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

