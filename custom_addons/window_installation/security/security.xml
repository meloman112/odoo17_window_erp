<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Группы -->
        <record id="group_window_installer" model="res.groups">
            <field name="name">Монтажник</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="comment">Доступ к задачам монтажа окон</field>
        </record>

        <!-- Record Rules -->
        <!-- Монтажник видит только свои задачи -->
        <record id="project_task_installer_rule" model="ir.rule">
            <field name="name">Монтажник: только свои задачи</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">[
                '|',
                ('is_installation_task', '=', False),
                '|',
                ('installer_team_id', '=', user.id),
                ('user_ids', 'in', [user.id])
            ]</field>
            <field name="groups" eval="[(4, ref('window_installation.group_window_installer'))]"/>
        </record>

        <!-- Менеджер видит все -->
        <record id="project_task_manager_rule" model="ir.rule">
            <field name="name">Менеджер: все задачи монтажа</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>

