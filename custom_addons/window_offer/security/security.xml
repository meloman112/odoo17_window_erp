<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Группы -->
        <record id="group_window_manager" model="res.groups">
            <field name="name">Менеджер окон</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">Полный доступ к заказам на окна, печать КП и договоров</field>
        </record>

        <!-- Record Rules -->
        <record id="sale_order_window_manager_rule" model="ir.rule">
            <field name="name">Менеджер: все заказы на окна</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[
                '|',
                ('is_window_order', '=', False),
                ('is_window_order', '=', True)
            ]</field>
            <field name="groups" eval="[(4, ref('window_offer.group_window_manager'))]"/>
        </record>
    </data>
</odoo>

