<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Группы -->
        <record id="group_window_measurer" model="res.groups">
            <field name="name">Замерщик</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">Доступ к замерам окон</field>
        </record>

        <!-- Record Rules -->
        <!-- Замерщик видит только свои задачи -->
        <record id="window_measure_measurer_rule" model="ir.rule">
            <field name="name">Замерщик: только свои замеры</field>
            <field name="model_id" ref="model_window_measure"/>
            <field name="domain_force">[
                '|',
                ('measurer_id', '=', user.id),
                ('measurer_id', '=', False)
            ]</field>
            <field name="groups" eval="[(4, ref('window_measurement.group_window_measurer'))]"/>
        </record>

        <!-- Менеджер видит все -->
        <record id="window_measure_manager_rule" model="ir.rule">
            <field name="name">Менеджер: все замеры</field>
            <field name="model_id" ref="model_window_measure"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>
    </data>
</odoo>

